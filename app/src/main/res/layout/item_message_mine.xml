<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_setting_item">

    <com.example.bountyhunter.view.component.RoundedImageView
        android:id="@+id/iv_message_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_setting_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_bottom_corner="20dp"
        app:left_top_corner="20dp"
        app:right_bottom_corner="20dp"
        app:right_top_corner="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/tv_message_content"
        app:layout_constraintEnd_toStartOf="@+id/iv_message_avatar"
        app:layout_constraintStart_toStartOf="@+id/tv_message_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_nickname"
        app:srcCompat="@drawable/ic_message_mine" />

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:maxWidth="300dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="26dp"
        android:paddingBottom="8dp"
        android:text="TextView——————---------------------——————--------------——\n\n\n\n\n6666"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_message_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_nickname" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="昨天"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sex"
        app:layout_constraintEnd_toStartOf="@+id/iv_sex"
        app:layout_constraintTop_toTopOf="@+id/iv_sex" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_nickname"
        app:layout_constraintEnd_toStartOf="@+id/tv_message_nickname"
        app:layout_constraintTop_toTopOf="@+id/tv_message_nickname" />

    <TextView
        android:id="@+id/tv_message_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/iv_message_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_message_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>